{
  "manifest_version": 3,
  "name": "CoLink-领英 Linkedin 查邮箱&找相似",
  "version": "1.0.3",
  "description": "Linkedin 查邮箱&找相似，支持递归查找相似用户",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "打开 CoLink"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "floating-panel/floating-panel.html",
        "floating-panel/floating-panel.css",
        "floating-panel/floating-panel.js",
        "utils/linkedin-scraper.js",
        "utils/api.js"
      ],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}

