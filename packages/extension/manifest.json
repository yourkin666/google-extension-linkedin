{
  "manifest_version": 3,
  "default_locale": "zh_CN",
  "name": "__MSG_extensionName__",
  "version": "1.0.7",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "storage",
    "identity",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://colink.in/*",
    "https://www.linkedin.com/*",
    "http://localhost:3000/*",
    "https://hmtjgfpnpxdjbxlfqqmc.supabase.co/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "__MSG_extensionActionTitle__"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "floating-panel/floating-panel.html",
        "floating-panel/floating-panel.css",
        "floating-panel/floating-panel.js",
        "utils/linkedin-scraper.js",
        "utils/api.js"
      ],
      "matches": [
        "https://www.linkedin.com/*"
      ]
    }
  ]
}
